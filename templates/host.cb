#!/bin/sh

trap 'exit 255' INT

build() {
	local rootfs=$1

	sysrc -R "$rootfs" cron_enable=NO
	sysrc -R "$rootfs" sendmail_enable=NONE
	sysrc -R "$rootfs" syslogd_flags="-ss"
}

action=$1
shift

case $action in
template)
	echo "FreeBSD-13.1"
	;;
devfs)
	true
	;;
build)
	build "$@"
	;;
*)
	false
	;;
esac
