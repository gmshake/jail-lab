#!/bin/sh

trap 'exit 255' INT

build() {
	local rootfs=$1
	pkg -c "$rootfs" install -qy strongswan && {
		sysrc -R "$rootfs" strongswan_enable=YES
	}
}

action=$1
shift

case $action in
template)
	echo "FreeBSD-13.1-router"
	;;
pkg_cache|devfs|dns)
	true
	;;
build)
	build "$@"
	;;
*)
	false
	;;
esac
